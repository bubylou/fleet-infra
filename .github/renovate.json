{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "apps/.+/deployment\\.ya?ml$",
      "infrastructure/.+/deployment\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "apps/.+/release\\.ya?ml$",
      "infrastructure/.+/deployment\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "ghcr.io/hotio/*"
      ],
      "groupName": "hotio-release",
      "versioning": "regex:^release-(?<major>\\d+).(?<minor>\\d+).(?<patch>\\d+)\\.(?<revision>\\d+)$"
    },
    {
      "matchPackageNames": [
        "ghcr.io/hotio/readarr"
      ],
      "groupName": "hotio-testing",
      "versioning": "regex:^testing-(?<major>\\d+).(?<minor>\\d+).(?<patch>\\d+)\\.(?<revision>\\d+)$"
    }
  ]
}
